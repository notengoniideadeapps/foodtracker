<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aisle"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/foodbutton"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/foodlist"
        android:backgroundTint="@color/black"
        android:textFontWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calendarbutton"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/addfood"
        android:textFontWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/yellow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="363dp"
        android:layout_marginBottom="4dp"
        android:background="@color/pail"
        android:fontFamily="@font/almendra"
        android:justificationMode="none"
        android:text=" WELCOME TO YOUR FOOD EXPIRY DATE TRACKER. PLEASE CHOOSE OPTIONS ON THE RIGHT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/shopping_cart_icon"
        android:layout_width="210dp"
        android:layout_height="167dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_add_shopping_cart_24"
        app:tint="@color/black"
        tools:layout_editor_absoluteX="484dp"
        tools:layout_editor_absoluteY="77dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

